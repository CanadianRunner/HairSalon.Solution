@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>These are our stylists:</h1>

@if(@Model.Count == 0)
{
  <p>There are no stylists recorded.</p>
  <button>@Html.ActionLink("Add Stylist", "Create")</button>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

@if (@Model.Count > 0) 
{
<button>@Html.ActionLink("Add Stylist", "Create")</button>
}
