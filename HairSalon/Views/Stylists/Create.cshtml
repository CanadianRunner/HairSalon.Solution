@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Create a new stylist:</h3>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Speciality)
  @Html.TextBoxFor(model => model.Speciality)

  <input type="submit" value="Add a new Stylist"/>
}

<button>@Html.ActionLink("Show all Stylists", "Index")</button>